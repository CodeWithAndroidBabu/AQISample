                            android:layout_marginHorizontal="4dp"
                            android:layout_marginTop="4dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="start"
                            android:maxLines="2"
                            android:text="Cautionary Statement - "
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="4dp"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:text="Active children and adults, and people with respiratory disease, such as asthma, should limit prolonged outdoor exertion."
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/linearUnhealthyModerate"
                    android:layout_marginTop="8dp"
                    android:background="@color/grey" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RelativeLayout
                    android:id="@+id/rlBgUnhealthy"
                    android:layout_width="55dp"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_aqi_unhealthy">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="42dp"
                        android:layout_centerHorizontal="true"
                        android:contentDescription="@null"
                        android:padding="2dp"
                        android:src="@drawable/icon_aqi_unhealthy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="1dp"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="151-200"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearUnhealthy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/rlBgUnhealthy"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="4dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="start"
                            android:maxLines="2"
                            android:text="Air Pollution Level - "
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_aqi_unhealthy"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="start"
                            android:maxLines="2"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:text="Unhealthy"
                            android:textColor="@color/white"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="4dp"
                            android:layout_marginTop="4dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="start"
                            android:maxLines="2"
                            android:text="Health Implications - "
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="4dp"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:text="Everyone may begin to experience health effects; members of sensitive groups may experience more serious health effects."
