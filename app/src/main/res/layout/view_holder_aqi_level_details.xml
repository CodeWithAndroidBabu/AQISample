                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_aqi_very_unhealthy"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="start"
                            android:maxLines="2"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:text="Very Unhealthy"
                            android:textColor="@color/white"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="4dp"
                            android:layout_marginTop="4dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="start"
                            android:maxLines="2"
                            android:text="Health Implications - "
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="4dp"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:text="Health warnings of emergency conditions. The entire population is more likely to be affected."
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="4dp"
                            android:layout_marginTop="4dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="start"
                            android:maxLines="2"
                            android:text="Cautionary Statement - "
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="4dp"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:text="Active children and adults, and people with respiratory disease, such as asthma, should avoid all outdoor exertion; everyone else, especially children, should limit outdoor exertion."
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/linearVeryUnhealthy"
                    android:layout_marginTop="8dp"
                    android:background="@color/grey" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RelativeLayout
                    android:id="@+id/rlBgHazardous"
                    android:layout_width="55dp"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_aqi_haradous">

                    <ImageView
                        android:layout_width="45dp"
